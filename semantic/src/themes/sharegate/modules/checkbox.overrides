/*******************************
         Site Overrides
*******************************/

// border-box is necessary in order for the radio to be centered everywhere
.ui.radio.checkbox label:before {
  box-sizing: border-box;
}

.ui.checkbox input:not([type=radio]):checked ~ .box:before, .ui.checkbox input:not([type=radio]):checked ~ label:before {
    background: url("@{iconsPath}/checkmark.svg") center center no-repeat;
    background-size: 12px 8px;
    background-color: #FFF;
}

.ui.checkbox input:not([type=radio]):indeterminate:focus ~ .box:before, .ui.checkbox input:not([type=radio]):indeterminate:focus ~ label:before, .ui.checkbox input:checked:not([type=radio]):focus ~ .box:before, .ui.checkbox input:checked:not([type=radio]):focus ~ label:before {
    background: url("@{iconsPath}/checkmark.svg") center center no-repeat;
    background-size: 12px 8px;
    background-color: #FFF;
}